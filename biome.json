{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noImplicitAnyLet": "warn",
        "noConfusingVoidType": "warn",
        "noShadowRestrictedNames": "warn",
        "noControlCharactersInRegex": "warn",
        "noArrayIndexKey": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noInvalidUseBeforeDeclaration": "warn"
      },
      "performance": {
        "noDelete": "warn"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noForEach": "warn",
        "useLiteralKeys": "warn",
        "useOptionalChain": "warn",
        "noUselessCatch": "warn"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "warn",
        "noParameterAssign": "warn",
        "noUselessElse": "warn",
        "useNodejsImportProtocol": "warn",
        "useDefaultParameterLast": "warn",
        "useTemplate": "warn",
        "noUnusedTemplateLiteral": "warn"
      },
      "a11y": {
        "useButtonType": "warn",
        "useValidAnchor": "warn",
        "noSvgWithoutTitle": "warn",
        "useKeyWithClickEvents": "warn",
        "useSemanticElements": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "**/examples/**",
      "**/.vscode/**",
      "**/.github/**",
      "**/bun.lockb",
      "**/*.prisma",
      "**/tsconfig*.json"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}

{
  "name": "root",
  "private": true,
  "workspaces": ["packages/*", "examples/*"],
  "scripts": {
    "build": "bun run --filter @paljs/plugins --filter @paljs/nexus --filter @paljs/generator --filter @paljs/admin build",
    "format": "biome format --write .",
    "format:ci": "biome format .",
    "lint": "biome lint .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "bun test packages/generator/ packages/nexus/ tests/setup.test.ts tests/e2e/integration.test.ts",
    "test:e2e": "bun test tests/e2e/ examples/generator-test/",
    "test:all": "bun test packages/ tests/ examples/generator-test/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:legacy": "jest --coverage",
    "docs:gen": "bun run docgen.js",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.8",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lefthook": "^1.13.6",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0"
  }
}
